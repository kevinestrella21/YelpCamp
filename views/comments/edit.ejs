<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="my-2" style="width: 30%; margin: 0 auto;">
            <h1 style="font-size: 20px;">Edit Comment</h1>
            <form action = "/campgrounds/<%= campground_id %>/comments/<%=comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control mt-3" type="text" name = "comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-info btn-block">SUBMIT</button>
                </div>
            </form>

            <a href="/campgrounds/<%=campground_id%>">Go back</a>
        </div>
    </div>
</div>



