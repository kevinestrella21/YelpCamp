<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="my-2" style="width: 30%; margin: 0 auto;">
            <h1 style="font-size: 20px;">EDIT <%= campgrounds.name %></h1>
            <form action = "/campgrounds/<%= campgrounds._id%>?_method=PUT " method="POST">
                <div class="form-group">
                    <input class="form-control mt-3" type="text" name = "campground[name]" value="<%=campgrounds.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "campground[image]" value="<%=campgrounds.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "campground[description]" value="<%=campgrounds.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-info btn-block">SUBMIT</button>
                </div>
            </form>

            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>



<%- include("../partials/footer.ejs") %>
