<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="my-2" style="width: 30%; margin: 0 auto;">
            <h1 style="font-size: 20px;">CREATE A NEW CAMPGROUND</h1>
            <form action = "/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control mt-3" type="text" name = "campName" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "image" placeholder="image-url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-info btn-block">SUBMIT</button>
                </div>
            </form>

            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>



