<%- include("../partials/header.ejs") %>
    

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>CAMPGROUNDS</h1>
                <a class="btn btn-primary btn-lg" href="campgrounds/new">
                    Add new Campground</a>
            </div>
        </header>
    
        <div class="row">
                <% campgrounds.forEach(function(camps){ %>
                    
                        <div class="col-md-3 col-sm-6 pt-3">
                            <div class="img-thumbnail text-center">

                                <img src="<%=camps.image%>" width=" 100% \9" alt="">
                                <div class="caption">
                                    <h4><%=camps.name%></h4>
                                </div>
                                <p>
                                    <a href="/campgrounds/<%= camps._id%>" class="btn btn-primary">More Info</a>
                                </p>
                            </div>
                            
                        </div>
                <% }); %>
            
        </div>
    </div>

<%- include("../partials/footer.ejs") %>
